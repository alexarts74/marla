<h1 class="title"> Discover some new humans</h1>
<div class="row container">
  <% @humans.each do |human| %>
    <div class="col-12 col-md-4">

      <div class="card-img  mx-1">
        <%= cl_image_tag human.photo.key, crop: :fill, class: "image" if human.photo.attached? %>
        <div class="all-description">
          <h6 class="name"><%= human.name %></h6>
          <p class="price"><%= human.price %>â‚¬</p>
          <p class="category"><%= human.categories.map(&:name).join(" / ") %></p>
          <p><%= link_to "Learn more", human_path(human.id), class: "delete"%></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
